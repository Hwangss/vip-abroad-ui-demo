/* ============================================================================
   Iconfonts
   ========================================================================== */

/**
 * Base
 */
@font-face
    font-family 'vipFont'
    src url('{$fontDomain}/fonts/vipFont.eot')
    src url('{$fontDomain}/fonts/vipFont.eot?#iefix') format('embedded-opentype'),
        url('{$fontDomain}/fonts/vipFont.svg#vipFont') format('svg'),
        url('{$fontDomain}/fonts/vipFont.woff') format('woff'),
        url('{$fontDomain}/fonts/vipFont.ttf') format('truetype')
    font-weight normal
    font-style normal

.iconfont
    display inline-block
    font-family 'vipFont'
    speak none
    font-style normal
    font-weight normal
    font-variant normal
    text-transform none
    line-height 1
    font-size 16px
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale


/**
 * Size
 */
.iconfont-16
    font-size 16px

.iconfont-24
    font-size 24px

.iconfont-32
    font-size 32px


/**
 *  Font Icon
 */

// error
.iconfont-error
    color #f64a4a
    &:before
        content '\e600'

// success
.iconfont-success
    color #47b85c
    &:before
        content '\e602'

// info
.iconfont-info
    color #249fdf
    &:before
        content '\e607'

// help
.iconfont-help
    color #2689f8
    &:before
        content '\e605'

// warning
.iconfont-warning
    color #f9a123
    &:before
        content '\e603'

// tick
.iconfont-tick
    &:before
        content '\e601'

// close
.iconfont-close
    &:before
        content '\e609'

// card
.iconfont-card
    &:before
        content '\e60a'

// shopping bag
.iconfont-shopping-bag
    &:before
        content '\e604'

// Play
.iconfont-play
    &:before
        content '\e606'

// heart
.iconfont-heart
    &:before
        content '\e608'

// plus
.iconfont-plus
    &:before
        coontent '\e60b'